@page "/addproduct"

<h3>Add Products</h3>

<EditForm Model="@productForCreationDto" OnValidSubmit="HandleValidSubmit" FormName="ProductForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="productNumber">Product Number</label>
        <InputText id="productNumber" class="form-control" @bind-Value="productForCreationDto.ProductNumber" />
    </div>

    <div class="form-group">
        <label for="name">Product Name</label>
        <InputText id="name" class="form-control" @bind-Value="productForCreationDto.Name" />
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <InputText id="description" class="form-control" @bind-Value="productForCreationDto.Description" />
    </div>

    <div class="form-group">
        <label for="price">Price</label>
        <InputNumber id="price" class="form-control" @bind-Value="productForCreationDto.Price" />
    </div>

    <div class="form-group">
        <label for="category">Category</label>
        <InputText id="category" class="form-control" @bind-Value="productForCreationDto.Category" />
    </div>

    <div class="form-group">
        <label for="isDiscontinued">Is Discontinued</label>
        <InputCheckbox id="isDiscontinued" class="form-control" @bind-Value="productForCreationDto.IsDiscontinued" />
    </div>

    <button type="submit" class="btn btn-primary">Add Product</button>
</EditForm>

@if (message != null)
{
    <div class="alert alert-info">@message</div>
}
